<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
    <event name="payment_method_assign_data">
        <observer name="cointopay_payment_gateway_data_assign" instance="Cointopay\PaymentGateway\Observer\DataAssignObserver" />
    </event>
    <event name="sales_order_save_after">
        <observer name="place_order_after" instance="Cointopay\PaymentGateway\Observer\SalesOrderPlaceAfterObserver" />
    </event>
	<event name="cms_page_render">
        <observer name="cointopay_cms_page_render" instance="Cointopay\PaymentGateway\Observer\PlaceOrderAfterObserver" cacheable="false" />
    </event>
</config>
